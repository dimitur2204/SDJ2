<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="102.0" prefWidth="306.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.via.listexample.HelloViewController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <FlowPane prefHeight="200.0" prefWidth="200.0">
      <children>
          <Label text="Number of todos: " />
          <Label fx:id="count">0</Label>
      </children>
   </FlowPane>
   <FlowPane prefHeight="200.0" prefWidth="200.0">
      <children>
         <TextField fx:id="todo">
            <opaqueInsets>
               <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
            </opaqueInsets>
         </TextField>
          <Button onAction="#onAddButtonClick" text="Add" />
      </children>
   </FlowPane>
   <ListView fx:id="todos" prefHeight="200.0" prefWidth="200.0" />
</VBox>
